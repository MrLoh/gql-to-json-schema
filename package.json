{
  "name": "gql-to-json-schema",
  "version": "1.0.0",
  "description": "Convert GraphQL to JSON and Yup schema",
  "repository": "https://github.com/MrLoh/gql-to-json-schema.git",
  "author": "@MrLoh",
  "license": "MIT",
  "source": "src/index.js",
  "main": "dist/index.js",
  "module": "dist/foo.mjs",
  "scripts": {
    "build": "rm -rf ./dist && microbundle build",
    "test": "jest --watch"
  },
  "dependencies": {
    "graphql": "^14.0.2",
    "lodash.kebabcase": "^4.1.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-preset-env": "^1.7.0",
    "eslint": "^5.11.1",
    "eslint-plugin-jest": "^22.1.2",
    "jest": "^23.6.0",
    "microbundle": "^0.9.0",
    "prettier": "^1.15.3"
  },
  "prettier": {
    "printWidth": 100,
    "arrowParens": "always",
    "semi": true,
    "tabs": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.js?(x)"
    ]
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "eslint:recommended",
    "plugins": [
      "jest"
    ],
    "env": {
      "es6": true,
      "jest/globals": true
    },
    "rules": {
      "no-var": "warn",
      "prefer-const": "warn",
      "no-await-in-loop": "error",
      "prefer-spread": "error",
      "no-template-curly-in-string": "warn",
      "valid-jsdoc": "warn",
      "default-case": "warn",
      "eqeqeq": [
        "warn",
        "smart"
      ],
      "no-alert": "error",
      "no-eval": "warn",
      "no-extend-native": "warn",
      "no-implicit-coercion": "warn",
      "no-useless-concat": "warn",
      "radix": "warn",
      "wrap-iife": [
        "error",
        "inside"
      ],
      "no-shadow": "warn",
      "no-mixed-spaces-and-tabs": [
        "error",
        "smart-tabs"
      ]
    }
  }
}
